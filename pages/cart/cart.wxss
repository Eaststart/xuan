checkbox .wx-checkbox-input {
  border-radius: 100%;
  width: 30rpx;
  height: 30rpx;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  font-size: 26rpx;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  color: rgba(255, 68, 68, 0);
  background-color: #f44;
}

.pad {
  padding: 0 30rpx;
  background-color: #fff;
}
.wrap{
  position:absolute;
  top:0;
  left:0;
  width:100%;
  height:96%;
  overflow:auto;
}
.header, .footer {
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  line-height: 90rpx;
  display: flex;
  justify-content: space-between;
}

.header {
  border-bottom: 1px solid #e5e5e5;
}

.footer {
  position: fixed;
  bottom: 0;
  font-size: 30rpx;
  padding-right: 0;
}

.left {
  border-radius: 100%;
  font-size: 30rpx;
}

.left checkbox {
  margin-right: 20rpx;
}

.header .mid image {
  width: 30rpx;
  height: 30rpx;
  position: relative;
  top: 4rpx;
  margin-right: 6rpx;
}

.header .mid text {
  font-size: 30rpx;
}

.header .right text {
  font-size: 30rpx;
}

.footer .fRight {
  display: flex;
}

.footer .fRight .sum {
  display: flex;
  flex-direction: column;
}

.footer .fRight .sum .num {
  color: #f44;
}

.footer .fRight .sum>text {
  line-height: 46rpx;
  text-align: right;
}

.footer .fRight .sub button {
  border: none;
  background-color: #f44;
  color: #fff;
  height: 100%;
  width: 240rpx;
  margin-left: 30rpx;
}

.main .list {
  height: 260rpx;
  border-bottom: 2px solid #e5e5e5;
  padding-top: 20rpx;
  box-sizing: border-box;
  display: flex;
}

.main .list checkbox {
  position: relative;
  top: 60rpx;
}

.main .list .img {
  width: 180rpx;
  height: 200rpx;
  margin: 0 24rpx;
  position:relative;
}
.main .list .img navigator{
  position:absolute;
  top:0;
  left:0;
  width:100%;
  height:100%;
}
.main .list .img image {
  width: 100%;
  height: 100%;
}

.main .list .con {
  display: flex;
  flex-direction:column;
}

.main .list .con .title {
  font-size: 32rpx;
  width: 240rpx;
  height: 80rpx;
}

.main .list .con .title text {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.main .list .con .size{
  font-size:28rpx;
  width:400rpx;
  height:40rpx;
  display:flex;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  color:#929292;
  margin:22rpx 0;
}
.main .list .con .price{
  display:flex;
  justify-content: space-between;
}
.main .list .con .price .p{
  font-size:30rpx;
  color:#FF4444;
}
.main .list .con .price .n{
  font-size:28rpx;
  color:#888888;
}


